@page "/resetpassword"
@model ResetPasswordCommand
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        body {
            margin: auto;
            margin-top: 150px;
            width: 450px;
            padding: 30px;
            box-shadow: 5px 10px 18px #888888;
            border-radius: 20px;
        }
    </style>
</head>
<body>

    <h3 class="text-center" style="margin-bottom:30px">
        Reset Your Password
    </h3>

    <form action="/resetpassword" method="post">

        <input type="hidden" name="Token" value="@Request.Query["token"]" />
        <input type="hidden" name="Email" value="@Request.Query["email"]" />

        <div class="form-group" style="margin-bottom:20px">
            <label for="password">New Password</label>
            <input type="password" class="form-control" id="password" aria-describedby="passwordHelp" name="Password">
            <small id="passwordHelp" class="form-text text-muted">
                Your password must contain a number, a capital and a small letter and one character. The Lenght must be at least 6.
            </small>
        </div>
        <div class="form-group" style="margin-bottom:20px">
            <label for="confirmPassword">Confirm Password</label>
            <input type="Password" class="form-control" id="confirmPassword" name="ConfirmPassword">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>

